@model IEnumerable<TeaHouse.Models.Choice>

@{
    ViewBag.Title = "OrderDetails";
}

<h2>View Orders</h2>


<table class="table">
    <tr>
        <th>
            Status
        </th>
        <th>
            Product
        </th>
        <th>
            Type
        </th>
        <th>
            Price
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SelectedFood.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SelectedFood.FoodType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SelectedFood.Price)
            </td>

        </tr>
    }

</table>
<h3>Total : $@Model.Sum(x => x.SelectedFood.Price)</h3>
<p>

    @Html.ActionLink("Back to Confirmed Orders", "Index")
</p>
