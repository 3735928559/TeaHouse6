@model TeaHouse.Models.Choice

@{
    ViewBag.Title = "Delete";
}

<h2>Remove Selection</h2>

<h3>Are you sure you want to remove this?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Product
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SelectedFood.Name)
        </dd>

        <dt>
            Type
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SelectedFood.FoodType)
        </dd>
        <dt>
            Price
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SelectedFood.Price)
        </dd>





    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Remove" class="btn btn-default" /> |
            @Html.ActionLink("Back to Review Orders", "Index")
        </div>
    }
</div>
